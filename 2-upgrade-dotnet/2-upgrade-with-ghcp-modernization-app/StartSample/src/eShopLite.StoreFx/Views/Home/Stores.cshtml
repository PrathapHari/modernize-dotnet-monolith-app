@using eShopLite.StoreFx.Models
@model List<eShopLite.StoreFx.Models.StoreInfo>

@{
    ViewData["Title"] = "Stores";
}

<div class="container">
    <h1 class="mb-4">Our Store Locations</h1>
    <p class="lead text-muted mb-4">Visit us at any of our convenient locations</p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No stores found</h4>
            <p>We're expanding our store network. Please check back soon!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var store in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-3">@store.Name</h5>
                            <p class="card-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill text-primary" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"/>
                                </svg>
                                <strong>Location:</strong><br />
                                <span class="ms-4">@store.City, @store.State</span>
                            </p>
                            <p class="card-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock-fill text-primary" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
                                </svg>
                                <strong>Hours:</strong><br />
                                <span class="ms-4">@store.Hours</span>
                            </p>
                            <a href="#" class="btn btn-outline-primary w-100 mt-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-signpost-2-fill" viewBox="0 0 16 16">
                                    <path d="M7.293.707A1 1 0 0 0 7 1.414V4H2a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h5v6h2v-6h3.532a1 1 0 0 0 .768-.36l1.933-2.32a.5.5 0 0 0 0-.64L13.3 4.36a1 1 0 0 0-.768-.36H9V1.414A1 1 0 0 0 7.293.707"/>
                                </svg>
                                Get Directions
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>