@using eShopLite.StoreFx.Models
@model List<eShopLite.StoreFx.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <h1 class="mb-4">Our Products</h1>
    <p class="lead text-muted mb-4">Browse our collection of outdoor gear and equipment</p>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No products found</h4>
            <p>We're currently updating our inventory. Please check back soon!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <img src="~/images/@product.ImageUrl" 
                                 class="card-img-top w-100 h-100" 
                                 alt="@product.Name"
                                 style="object-fit: cover;"
                                 onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=&quot;d-flex align-items-center justify-content-center h-100 text-white&quot;><div class=&quot;text-center&quot;><h5>@product.Name</h5><small>Product Image</small></div></div>';" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">@product.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="h4 text-success mb-0">$@product.Price.ToString("F2")</span>
                                    <span class="badge bg-success">In Stock</span>
                                </div>
                                <button class="btn btn-success w-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16">
                                        <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9z"/>
                                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1zm3.915 10L3.102 4h10.796l-1.313 7zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0m7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                                    </svg>
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
