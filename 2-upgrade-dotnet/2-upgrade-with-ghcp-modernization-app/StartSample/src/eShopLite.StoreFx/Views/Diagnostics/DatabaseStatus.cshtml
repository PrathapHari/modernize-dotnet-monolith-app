@{
    ViewData["Title"] = "Database Diagnostics";
}

<div class="container mt-4">
    <h1>?? Database Diagnostics</h1>
    
    <div class="alert alert-info">
        <h4>Database Status</h4>
        <p><strong>Products:</strong> @ViewBag.ProductCount</p>
        <p><strong>Stores:</strong> @ViewBag.StoreCount</p>
    </div>

    @if (ViewBag.ProductCount == 0)
    {
        <div class="alert alert-danger">
            <h4>?? No Products Found!</h4>
            <p>The database seeding may have failed. Check the console logs for errors.</p>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <h4>? Database Seeded Successfully!</h4>
        </div>
    }

    <h2>Products in Database</h2>
    @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image URL</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in ViewBag.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>$@product.Price.ToString("F2")</td>
                        <td>@product.ImageUrl</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <h2 class="mt-4">Stores in Database</h2>
    @if (ViewBag.Stores != null && ViewBag.Stores.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Hours</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var store in ViewBag.Stores)
                {
                    <tr>
                        <td>@store.Id</td>
                        <td>@store.Name</td>
                        <td>@store.City</td>
                        <td>@store.State</td>
                        <td>@store.Hours</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
        <a asp-controller="Diagnostics" asp-action="ApiStatus" class="btn btn-secondary">View JSON API</a>
    </div>
</div>